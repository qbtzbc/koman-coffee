<!-- 订单详情 -->
<view class="container" wx:if="{{order}}">
  <view class="card"><text class="order-no">订单号: {{order.orderNo}}</text><text class="status">{{order.statusText}}</text></view>
  <view class="card"><text class="label">商品信息</text><view wx:for="{{order.items}}" wx:key="productId" class="item"><text>{{item.productName}} x{{item.quantity}}</text><text>¥{{item.price}}</text></view></view>
  <view class="card"><text class="label">订单总额: ¥{{order.totalAmount}}</text></view>
  <view class="actions" wx:if="{{order.status === 'pending_accept'}}"><button class="btn-primary" bindtap="onAccept">接单</button></view>
  <view class="actions" wx:if="{{order.status === 'processing'}}"><button class="btn-primary" bindtap="onComplete">完成</button></view>
</view>
