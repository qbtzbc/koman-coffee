/**
 * 全局样式 - 优化版
 */

/* 重置样式 */
page {
  background-color: #FFF9F0;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica', 'Arial', sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333333;
}

/* 容器 */
.container {
  padding: 24rpx;
}

/* 卡片样式 */
.card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #6B4423 0%, #8B5A2B 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(107, 68, 35, 0.3);
  transition: all 150ms ease;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(107, 68, 35, 0.2);
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #6B4423;
  border: 2rpx solid #6B4423;
  border-radius: 48rpx;
  padding: 24rpx 48rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 150ms ease;
}

.btn-secondary:active {
  transform: scale(0.98);
  background-color: #FFF9F0;
}

/* 文本样式 */
.text-primary {
  color: #6B4423;
}

.text-secondary {
  color: #666666;
}

.text-tertiary {
  color: #999999;
}

.text-price {
  color: #6B4423;
  font-weight: 700;
}

.text-center {
  text-align: center;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 40rpx;
  color: #999999;
}

.empty-state image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-state text {
  display: block;
  font-size: 28rpx;
  color: #999999;
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999999;
  font-size: 28rpx;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-1 {
  flex: 1;
}

