/* 个人中心样式 */
.profile-header { text-align: center; padding: 60rpx 20rpx; }
.avatar { width: 160rpx; height: 160rpx; border-radius: 50%; display: block; margin: 0 auto 20rpx; }
.nickname { font-size: 32rpx; font-weight: bold; display: block; margin-bottom: 20rpx; }
.btn-login { background: #6B4423; color: #FFF; border-radius: 8rpx; padding: 16rpx 60rpx; font-size: 28rpx; }
.menu-list { margin-top: 20rpx; }
.menu-item { background: #FFF; padding: 32rpx 20rpx; display: flex; justify-content: space-between; align-items: center; border-bottom: 1rpx solid #EEE; }
.arrow { color: #999; }
.actions { padding: 40rpx 20rpx; }
