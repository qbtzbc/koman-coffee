<!-- 订单详情 -->
<view class="container" wx:if="{{order}}">
  <view class="status-card card">
    <text class="status-text" style="color: {{order.statusColor}}">{{order.statusText}}</text>
    <text class="order-no">订单号: {{order.orderNo}}</text>
  </view>

  <view class="items-card card">
    <text class="card-title">商品信息</text>
    <order-item wx:for="{{order.items}}" wx:key="productId" itemData="{{item}}"></order-item>
  </view>

  <view class="info-card card">
    <view class="info-row"><text class="label">下单时间:</text><text>{{order.createdTime}}</text></view>
    <view class="info-row" wx:if="{{order.paidAt}}"><text class="label">支付时间:</text><text>{{order.paidTime}}</text></view>
    <view class="info-row" wx:if="{{order.remark}}"><text class="label">备注:</text><text>{{order.remark}}</text></view>
    <view class="info-row total"><text class="label">订单总额:</text><text class="amount">¥{{order.totalAmount}}</text></view>
  </view>

  <view class="actions" wx:if="{{order.status === 'pending_accept'}}">
    <button class="btn-primary" bindtap="onPay">模拟支付</button>
  </view>
</view>
