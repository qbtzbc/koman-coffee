<!--
  首页 - 咖啡列表
-->
<!-- 启动加载动画 -->
<loading 
  id="app-loading" 
  show="{{showLoading}}" 
  loadingText="正在准备您的咖啡..."
  bindhide="onLoadingHide"
  bindtimeout="onLoadingTimeout"
  bindretry="onLoadingRetry"
></loading>

<view class="container">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <input class="search-input" placeholder="搜索咖啡..." disabled></input>
  </view>

  <!-- 分类导航 -->
  <scroll-view class="category-nav" scroll-x>
    <view 
      class="category-item {{currentCategory === '' ? 'active' : ''}}"
      bindtap="onCategoryChange"
      data-category=""
    >
      全部
    </view>
    <view 
      class="category-item {{currentCategory === item ? 'active' : ''}}"
      wx:for="{{categories}}"
      wx:key="*this"
      bindtap="onCategoryChange"
      data-category="{{item}}"
    >
      {{item}}
    </view>
  </scroll-view>

  <!-- 商品列表 -->
  <view class="product-list">
    <product-card
      wx:for="{{products}}"
      wx:key="_id"
      productData="{{item}}"
      showAddCart="{{false}}"
      bindtap="onProductTap"
    ></product-card>
  </view>

  <!-- 空状态 -->
  <view class="empty-state" wx:if="{{products.length === 0 && !loading}}">
    <text>暂无商品</text>
  </view>

  <!-- 加载中 -->
  <view class="loading" wx:if="{{loading}}">
    <text>加载中...</text>
  </view>
</view>
