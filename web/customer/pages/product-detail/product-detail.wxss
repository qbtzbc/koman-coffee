/* 商品详情页样式 */
.product-swiper {
  width: 100%;
  height: 600rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.product-info {
  margin: 20rpx;
}

.product-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.product-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  margin-right: 20rpx;
}

.product-price {
  font-size: 40rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.product-desc {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
  display: block;
  margin-bottom: 16rpx;
}

.product-meta {
  display: flex;
  gap: 32rpx;
  font-size: 24rpx;
  color: #999999;
}

.customization-section,
.quantity-section {
  margin: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  display: block;
  margin-bottom: 20rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  background-color: #F5F5F5;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #666666;
}

.quantity-input {
  width: 120rpx;
  height: 60rpx;
  text-align: center;
  background-color: #F5F5F5;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  z-index: 100;
}

.total-price {
  display: flex;
  flex-direction: column;
}

.total-price .label {
  font-size: 24rpx;
  color: #999999;
}

.total-price .price {
  font-size: 36rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.btn-cart,
.btn-buy {
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
}

.btn-cart {
  background-color: #FFE4D1;
  color: #6B4423;
}

.btn-buy {
  background-color: #6B4423;
  color: #FFFFFF;
}
