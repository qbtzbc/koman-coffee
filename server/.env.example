# 服务配置
NODE_ENV=development
PORT=3000

# 日志配置
LOG_LEVEL=debug
# LOG_LEVEL 可选值: debug, info, warn, error

# 数据库配置 (MongoDB)
DB_HOST=localhost
DB_PORT=27017
DB_NAME=koman_coffee

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 微信小程序配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=2097152

# CORS 配置（可选）
# CORS_ORIGIN=*

# 生产环境额外配置（仅供参考）
# NODE_ENV=production
# PORT=3000
# LOG_LEVEL=info
# DB_HOST=mongodb-server
# CORS_ORIGIN=https://yourdomain.com
