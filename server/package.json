{
  "name": "koman-coffee-server",
  "version": "1.0.0",
  "description": "Koman Coffee 后端服务",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "mocha tests/**/*.test.js",
    "init": "node scripts/init-data.js",
    "docker:dev": "cd .. && docker-compose up",
    "docker:dev:bg": "cd .. && docker-compose up -d",
    "docker:stop": "cd .. && docker-compose stop",
    "docker:down": "cd .. && docker-compose down",
    "docker:logs": "cd .. && docker-compose logs -f",
    "docker:build": "cd .. && docker-compose build",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:reload": "pm2 reload ecosystem.config.js",
    "pm2:delete": "pm2 delete ecosystem.config.js",
    "pm2:logs": "pm2 logs koman-coffee-api",
    "pm2:monit": "pm2 monit",
    "pm2:status": "pm2 status"
  },
  "keywords": ["coffee", "order", "wechat-miniprogram"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.3.4"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "sinon": "^15.0.3"
  }
}
